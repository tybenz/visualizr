# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# default to 4 spaces
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.mustache]
indent_size = 2
